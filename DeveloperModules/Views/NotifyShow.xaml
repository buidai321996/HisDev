<UserControl x:Class="DeveloperModules.Views.NotifyShow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             Width="Auto" Height="Auto">
    <Border Background="White" BorderThickness="2" BorderBrush="Black">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Left" Text="{Binding Caption}" Foreground="Blue" FontSize="20" FontWeight="Bold" Margin="3"/>
            <TextBlock HorizontalAlignment="Left" Text="{Binding Content}" Foreground="Black" FontSize="16" Margin="3"/>
        </StackPanel>
    </Border>
</UserControl>
