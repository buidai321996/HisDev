                            <dxdo:LayoutControlItem Caption="Email">
                                <dxe:TextEdit></dxe:TextEdit>
                            </dxdo:LayoutControlItem>
                            <dxdo:LayoutControlItem ShowCaption="True" Caption="@">
                                <dxe:ComboBoxEdit></dxe:ComboBoxEdit>
                            </dxdo:LayoutControlItem>
                        </dxdo:LayoutGroup>
                        <dxdo:LayoutGroup ItemHeight="Auto" ItemWidth="Auto">
                            <dxdo:LayoutControlItem Caption="Email" ItemWidth="3*">
                                <dxe:ComboBoxEdit 
                                     SelectedIndex="0"
                                      ValidateOnTextInput="True"
                                      ValidateOnEnterKeyPressed="True"
                                      ItemsSource="{Binding Countries}"
                                      EditValue="{Binding SelectedCountries3, Mode=OneWay}"
                                      AutoComplete="True"
                                      IncrementalFiltering="True"
                                      VerticalScrollBarVisibility="{Binding Path=EditValue, ElementName=cbVerticalScrollBarVisibility}"
                                      ImmediatePopup="{Binding Path=IsChecked, ElementName=cbPopup}"
                                >
                                    <dxe:ComboBoxEditItem Content="Dai"></dxe:ComboBoxEditItem>
                                    <dxe:ComboBoxEditItem Content="Dat"></dxe:ComboBoxEditItem>
                                    <dxe:ComboBoxEditItem Content="Dang"></dxe:ComboBoxEditItem>
                                    <dxe:ComboBoxEditItem Content="Dang2"></dxe:ComboBoxEditItem>
                                </dxe:ComboBoxEdit>
                            </dxdo:LayoutControlItem>
                            <dxdo:LayoutControlItem ShowCaption="False" >
                                <dx:SimpleButton Content="Add" ></dx:SimpleButton>
                            </dxdo:LayoutControlItem>
                        </dxdo:LayoutGroup>
                        <dxdo:LayoutGroup ItemHeight="Auto" ItemWidth="Auto">
                            <dxdo:LayoutControlItem Caption="Email" ItemWidth="3*">
                                <dxe:ComboBoxEdit VerticalAlignment="Top"
                                              SelectedIndex="1"
                                      ValidateOnTextInput="True"
                                      ValidateOnEnterKeyPressed="True"
                                      ItemsSource="{Binding Countries}"
                                      EditValue="{Binding SelectedCountries, Mode=OneWay}"
                                      AutoComplete="True"
                                      IncrementalFiltering="True"
                                      HorizontalScrollBarVisibility="{Binding Path=EditValue, ElementName=cbHorizontalScrollBarVisibility}"
                                      ImmediatePopup="{Binding Path=IsChecked, ElementName=cbPopup}">

                                    <dxe:ComboBoxEditItem Content="Dai"></dxe:ComboBoxEditItem>
                                    <dxe:ComboBoxEditItem Content="Dat"></dxe:ComboBoxEditItem>
                                    <dxe:ComboBoxEditItem Content="Dang"></dxe:ComboBoxEditItem>
                                    <dxe:ComboBoxEditItem Content="Dang2"></dxe:ComboBoxEditItem>
