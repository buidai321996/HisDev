             prism:ViewModelLocator.AutoWireViewModel="True" >


    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <dxdo:LayoutGroup  Orientation="Vertical" ItemHeight="Auto" ItemWidth="Auto" >
                    <dxdo:LayoutGroup 
    
